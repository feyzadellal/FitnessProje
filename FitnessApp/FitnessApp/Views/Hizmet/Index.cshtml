@model IEnumerable<FitnessApp.Models.Hizmet>

@{
    ViewData["Title"] = "Hizmetler";
}

<div class="container mt-5">
    <h2>Hizmetlerimiz (Dersler)</h2>
    
    <p>
        <a href="#" class="btn btn-primary">Yeni Hizmet Ekle</a>
    </p>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Hizmet Adı</th>
                <th>Süre (Dk)</th>
                <th>Ücret (TL)</th>
                <th>Salon</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td class="fw-bold">@item.Ad</td>
                    <td>@item.SureDk dk</td>
                    <td>@item.Ucret ₺</td>
                    <td>
                        <span class="badge bg-secondary">@item.Salon.Ad</span>
                    </td>
                    <td>
                        <button class="btn btn-sm btn-warning">Düzenle</button>
                        <button class="btn btn-sm btn-danger">Sil</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>