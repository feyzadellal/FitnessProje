@model IEnumerable<FitnessApp.Models.Hizmet>

@{
    ViewData["Title"] = "Hizmetler";
}

<div class="container mt-5">
    <h2>Hizmet Listesi</h2>
    
    <p>
        <a asp-action="Create" class="btn btn-primary">Yeni Hizmet Ekle</a>
    </p>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Hizmet Adı</th>
                <th>Süre (Dk)</th> <th>Salon</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Ad</td>
                    <td>@item.SureDk</td> <td>@item.Salon?.Ad</td> 
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Düzenle</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>