@model FitnessApp.Models.Hizmet

@{
    ViewData["Title"] = "Yeni Hizmet Ekle";
}

<div class="container mt-5">
    <h2>Yeni Hizmet Ekle</h2>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div class="form-group mb-3">
                    <label asp-for="Ad" class="control-label">Hizmet Adı</label>
                    <input asp-for="Ad" class="form-control" placeholder="Örn: Pilates, Yoga" />
                    <span asp-validation-for="Ad" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="SureDk" class="control-label">Süre (Dk)</label>
                    <input asp-for="SureDk" class="form-control" type="number" />
                    <span asp-validation-for="SureDk" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Ucret" class="control-label">Ücret (TL)</label>
                    <input asp-for="Ucret" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="Ucret" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="SalonId" class="control-label">Hangi Salon?</label>
                    <select asp-for="SalonId" class="form-control" asp-items="ViewBag.SalonId"></select>
                </div>

                <div class="form-group mt-4">
                    <input type="submit" value="Kaydet" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
                </div>
            </form>
        </div>
    </div>
</div>